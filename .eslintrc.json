{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "indent": [0, 4],
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "no-plusplus": 0,
        "max-len": 1,
        "no-param-reassign": 1,
        "no-restricted-globals": 0,
        "no-lonely-if": 0
    }
}